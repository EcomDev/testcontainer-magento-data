{
    "name": "ecomdev/testcontainers-magento-data",
    "description": "TestContainers for Magento data in integration/functional tests",
    "type": "library",
    "require": {
        "php": "^8.3",
        "testcontainers/testcontainers": "^0.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "ext-pdo": "*",
        "brianium/paratest": "^7.7",
        "guzzlehttp/guzzle": "^7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "EcomDev\\TestContainers\\MagentoData\\": "testcontainers-magento-data-php/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EcomDev\\TestContainers\\MagentoData\\": "testcontainers-magento-data-php/tests"
        }
    },
    "scripts": {
        "test": "paratest testcontainers-magento-data-php/tests",
        "unit": "paratest testcontainers-magento-data-php/tests --exclude-group=slow",
        "format:check": "phpcs --standard=PSR12 testcontainers-magento-data-php/",
        "format:write": "phpcbf --standard=PSR12 testcontainers-magento-data-php/"
    },
    "authors": [
        {
            "name": "Ivan Chepurnyi",
            "email": "ivan.chepurnyi@ecomdev.org"
        }
    ],
    "minimum-stability": "stable"
}
